<Window x:Class="Tiku.windows.frmActive"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tiku.windows"
        mc:Ignorable="d"
        Title="激活" Height="160" Width="300" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" VerticalAlignment="Center" FontSize="16" Margin="10">请输入激活码：</TextBlock>
        <TextBox x:Name="txtCode" Grid.Row="1" Margin="10"></TextBox>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button x:Name="btnCancel" Width="80" Height="30" Margin="5" Click="btnCancel_Click">取消</Button>
            <Button x:Name="btnActive" Width="80" Height="30" Margin="5" Click="btnActive_Click">激活</Button>
        </StackPanel>
    </Grid>
</Window>
