<UserControl x:Class="Tiku.control.ucToolItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tiku.control"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid x:Name="gButton" Background="#FF007ACC" MouseUp="gButton_MouseUp">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <Image x:Name="imgButton" Grid.Row="0" Margin="10,10,10,0" Source="/Tiku;component/image/userform1.png"></Image>
        <TextBlock x:Name="txtButton" Grid.Row="1" Foreground="White" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center">test</TextBlock>
    </Grid>
</UserControl>
