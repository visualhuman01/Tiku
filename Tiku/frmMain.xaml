<Window x:Class="Tiku.frmMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tiku"
        mc:Ignorable="d"
        Title="frmMain" Height="800" Width="1280" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="84"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Image Source="image/导航bg.png" Stretch="Fill"></Image>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="180"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Image Source="image/logo.png" Stretch="Fill" Margin="50,10"></Image>
                <Menu Grid.Column="2" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalAlignment="Right" HorizontalContentAlignment="Right">
                    <MenuItem Header="菜单">
                        <MenuItem x:Name="menu_logout" Header="退出登录"/>
                    </MenuItem>
                    <MenuItem x:Name="menu_Exit" Header="X" Click="menu_Exit_Click"/>
                </Menu>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel x:Name="spOneTag" Grid.Column="0" Background="#FF3E3E42">
            </StackPanel>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="10">
                    <ScrollViewer.Content  >
                        <StackPanel x:Name="spTwoTag" Orientation="Horizontal"  ScrollViewer.VerticalScrollBarVisibility="Auto">
                        </StackPanel>
                    </ScrollViewer.Content>
                </ScrollViewer>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <ScrollViewer.Content>
                        <StackPanel x:Name="spCourse" Orientation="Vertical"  ScrollViewer.VerticalScrollBarVisibility="Auto">
                            
                        </StackPanel>
                    </ScrollViewer.Content>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>
