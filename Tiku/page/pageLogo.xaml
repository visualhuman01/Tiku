<Page x:Class="Tiku.page.pageLogo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tiku.page"
      mc:Ignorable="d" 
      d:DesignHeight="84" d:DesignWidth="1280"
      Title="pageLogo" ShowsNavigationUI="False">

    <Grid>
        <Image Stretch="Fill" Source="/Tiku;component/image/导航bg.png" MouseLeftButtonDown="Image_MouseLeftButtonDown"></Image>
        <Grid>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Grid.Column="0" Stretch="Fill" Width="80" Margin="10" Source="/Tiku;component/image/logo2.png"></Image>
                <Image Grid.Column="1" Stretch="Fill" Height="60" Source="/Tiku;component/image/logo1.png"></Image>
            </StackPanel>
            <Grid>
                <Image Grid.Column="0" Stretch="Fill" Height="40" Width="260" Margin="10" Source="/Tiku;component/image/logo3.png"></Image>
            </Grid>
        </Grid>
    </Grid>
</Page>
